<html>
<head>
  <title>Browse Data</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Browse Data</h1>

  <div class="table">
    <table id ="table">
      <tr>
        <th>ID</th>
        <th>String</th>
        <th>Integer</th>
        <th>Float</th>
        <th>Date</th>
        <th>Boolean</th>
        <th>Actions</th>
      </tr>
            
          
          <% data.forEach((entry, index) => { %>
            <tr class="<%= index % 2 === 0 ? 'even' : 'odd' %>">
              <td><%= entry.id %></td>
              <td><%= entry.string %></td>
              <td><%= entry.integer %></td>
              <td><%= entry.float %></td>
              <td><%= entry.date %></td>
              <td><%= entry.boolean %></td>
              
              <td>
                <form action="/edit/<%= entry.id %>" method="GET" class="inline-form">
                <button type="submit" class="btn button-primary">Edit</button> 
                </form>
                <form action="/delete/<%= entry.id %>" method="DELETE" class="inline-form">
                  <button type="submit" class="btn danger">Delete</button>
                </form>
              </td> 
            </tr>
          <% }); %>
        </table>
      </div>


  <button type="button" onclick="location.href='/'" class="button button-secondary">Back</button>
</body>
</html>
