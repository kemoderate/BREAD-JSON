<!-- index.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>CRUD App</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <h1>CRUD App</h1>

    <!-- Add data form -->
    <h2>Add Data</h2>
    <form action="/data" method="post">
        <input type="text" name="id" placeholder="ID" required>
        <input type="text" name="stringField" placeholder="String" required>
        <input type="number" name="integerField" placeholder="Integer" required>
        <input type="number" step="0.01" name="floatField" placeholder="Float" required>
        <input type="date" name="dateField" placeholder="Date" required>
        <input type="checkbox" name="booleanField" value="true"> Boolean
        <button type="submit">Add</button>
    </form>

    <h2>Search and Filter</h2>
<form action="/" method="get">
  <input type="text" name="filters" placeholder="Search" value="<%= filters %>">
  <button type="submit">Apply Filters</button>
</form>

    <!-- Display data -->
    <h2>Data</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>String</th>
                <th>Integer</th>
                <th>Float</th>
                <th>Date</th>
                <th>Boolean</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item, index) => { %>
                <tr>
                    <td><%= index %></td>
                    <td><%= item.id %></td>
                    <td><%= item.stringField %></td>
                    <td><%= item.integerField %></td>
                    <td><%= item.floatField %></td>
                    <td><%= item.dateField %></td>
                    <td><%= item.booleanField %></td>
                    <td><a href="/edit/<%= index %>"><button class="btn btn-success">Edit</button></a></td>
                    <td><form action="/delete/<%= index %>" method="post"><button class="btn btn-delete">Delete</button></form></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="pagination">
        <% if (currentPage > 1) { %>
          <a href="/?page=<%= currentPage - 1 %>&filters=<%= filters %>">Previous</a>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <a href="/?page=<%= currentPage + 1 %>&filters=<%= filters %>">Next</a>
        <% } %>
      </div>

    <script src="/app.js"></script>
</body>
</html>
