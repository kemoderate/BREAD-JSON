<!-- edit.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Edit Data</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <h1>Edit Data</h1>

    <!-- Edit data form -->
    <form action="/edit/<%= id %>" method="post">
        <input type="text" name="id" placeholder="ID" value="<%= item.id %>" required>
        <input type="text" name="stringField" placeholder="String" value="<%= item.stringField %>" required>
        <input type="number" name="integerField" placeholder="Integer" value="<%= item.integerField %>" required>
        <input type="number" step="0.01" name="floatField" placeholder="Float" value="<%= item.floatField %>" required>
        <input type="date" name="dateField" placeholder="Date" value="<%= item.dateField %>" required>
        <input type="checkbox" name="booleanField" value="true" <%= item.booleanField ? 'checked' : '' %>> Boolean
        <button type="submit">Update</button>
    </form>

    <script src="/app.js"></script>
</body>
</html>
